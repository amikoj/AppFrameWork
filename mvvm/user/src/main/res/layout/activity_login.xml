<?xml version="1.0" encoding="utf-8"?>

<!--登陆界面-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <data>
        <!--<import type="cn.enjoytoday.base.viewmodel.LoginViewModel"/>-->

        <!--<variable-->
            <!--name="viewModel"-->
            <!--type="LoginViewModel"/>-->
        <!--声明需要使用的变量名和类的全路径 -->

        
    </data>
    
    <!-- 布局部分-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/colorNormalBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <cn.enjoytoday.base.widgets.HeaderBar
            android:id="@+id/headerBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rightText="@string/register_label"
            app:titleText="@string/login_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/userNameEt"
            app:layout_constraintTop_toBottomOf="@id/headerBar"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="100dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="请输入用户名"
            android:padding="10dp"
            android:textSize="14sp"
            android:inputType="text"
            android:lines="1"
            android:background="@drawable/round_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/pwdEt"
            app:layout_constraintTop_toBottomOf="@id/userNameEt"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:hint="请输入密码"
            android:text="@{userInfo.pwd}"
            android:lines="1"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="14sp"
            android:background="@drawable/round_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/goIv"
            app:layout_constraintTop_toBottomOf="@id/pwdEt"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="30dp"
            android:scaleType="fitCenter"
            android:text="去登陆"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:drawablePadding="10dp"
            android:drawableEnd="@drawable/ic_arrow_forward"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/forgetTv"
            app:layout_constraintStart_toStartOf="@id/userNameEt"
            android:textSize="12sp"
            android:text="忘记密码？"
            app:layout_constraintTop_toTopOf="@id/goIv"
            app:layout_constraintBottom_toBottomOf="@id/goIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />



    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
    
    

    
    
    
</layout>








